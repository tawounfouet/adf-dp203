		"AzureSqlDatabase2_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "awf-db-004"
		},
		"AzureSqlDatabase2_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "sqladmin"
		},
		"AzureSqlDatabase_Connection_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "awf-sqldb-server.database.windows.net"
		},
		"AzureSqlDatabase_Connection_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "awf-db-004"
